mixin LayoutContent  

  div()&attributes(attrsLayout)

    block wrapperContent
      block beforeContent

      .content()&attributes(attrsContent)

        block navbarTop
          +MainNav({
            toggleID: 'navbarStandard',
            links: true,
            image: true,
            logo: 'posh-logo.png'
          }).bg-white.border-bottom.fixed-top.start-0.top-0

        block content
        if footer
          +Footer

      block afterContent
