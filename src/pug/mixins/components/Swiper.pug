mixin SwiperWithThumbnail
  .row
    .col-lg-12.mb-4.mb-lg-0
      .swiper-theme-container.swiper-slider(data-swiper-theme-container)
        .swiper(data-swiper!={
          spaceBetween: 5,
          loop: true,
          loopedSlides: 5,
          thumb: {
            spaceBetween: 5,
            slidesPerView: 5,
            loop: true,
            freeMode: true,
            grabCursor: true,
            loopedSlides: 5, 
            centeredSlides: true,
            slideToClickedSlide: true,
            watchSlidesVisibility: true,
            watchSlidesProgress: true,
          },
          slideToClickedSlide: true,
        })
          .swiper-wrapper
            each items in sliderImages
              .swiper-slide
                = '\n'
                img(src=`${CWD}${items.imageSrc}` alt="").w-100.h-100
                = '\n'

          .swiper-nav
            .swiper-button-next
            .swiper-button-prev
