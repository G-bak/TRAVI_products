mixin ScrollspyExample 
  .row
    .col-lg-3 
      nav#scrollspy.sticky-top.bg-white 
        ul.nav.nav-pills.py-3.d-block 
          li.nav-item 
            a.nav-link(href="#section-1") Section One 
          
          li.nav-item 
            a.nav-link(href="#section-2") Section Two 

          li.nav-item 
            a.nav-link(href="#section-3") Section Three

          li.nav-item 
            a.nav-link(href="#section-4") Section Four

    .col
      div(data-bs-spy="scroll" data-bs-target="#scrollspy" data-bs-smooth-scroll="true" tabindex="0")
        each value in [1,2,3,4]
          div(id=`section-${value}`)
            h4(class=`${value !== 1 ? 'mt-8 mb-4': 'my-4'}`) Section #{value}
