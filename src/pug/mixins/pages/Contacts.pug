mixin ContactOne 
  +Section({image:`${CWD}assets/images/contact-03.jpg`, className: 'overlay'}, container).p-0
    .row.min-vh-50.align-items-center.py-5
      .col-md-8.col-lg-5
        h1.text-white.fs-6.fs-md-5.mb-3 Contact
        p.fs-8.fw-light.text-white Relax, we've got your back. Feel free to contact us for any support.

  +Section(container)
    .row 
      .col-lg-5
        h3.text-uppercase.fw-light Contact
        hr.text-1200.short.mb-5

        .row
          .col-auto.pe-0(style="min-width: 16px;")
            span.fas.fa-map-marker-alt(style="font-size: 13px;") 
          .col 
            p.fw-light.fs-9.text-700.mb-2
              strong.text-1100.fw-normal Posh International Hotel Las Vegas
              br 
              | 2000 Fashion Show Drive
              br 
              | Las Vegas, Nevada 56846
            p.mb-3
              strong.text-1100.fw-normal Phone: &nbsp;&nbsp;&nbsp;&nbsp; 
              | 458.564.4545
              br 
              strong.text-1100.fw-normal Reserve: &nbsp; 
              | 677.454.5757
        
        .row.mb-3 
          .col-auto.pe-0(style="min-width: 16px;") 
            span.fas.fa-envelope(style="font-size:13px;")
          
          .col 
            a(href="mailto:info@posh.com").fs-9  info@posh.com
      .col-lg-7 
        form.posh-form(method="POST" onsubmit="return false;")
          .mb-3 
            input.form-control(type="hidden" name="to" value="username@domain.extension")

          .mb-3 
            input.form-control(type="text" name="name" placeholder="Name" required)

          .mb-3 
            input.form-control(type="email" name="from" placeholder="Email" required)

          .mb-3 
            textarea.form-control(rows='8' name="message" placeholder="Message")
          
          input.btn.btn-primary(type="submit" name="submit" value="Send!")
          .form-feedback.mt-3
        

      .col.mt-5 
        .googlemap(data-gmap data-latlng='48.8583701,2.2922926' data-scrollwheel='false' data-icon=`${CWD}assets/images/hotel-icon.png` data-zoom='14' data-theme='Default' style="min-height: 400px")
          .marker-content.py-3
            h5 Eiffel Tower
            p
              | Gustave Eiffel's iconic,
              br
              | wrought-iron 1889 tower.

mixin ContactTwo 
