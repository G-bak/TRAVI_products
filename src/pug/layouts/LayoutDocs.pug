extends LayoutTheme

include ../mixins/navbar/DocsNav
include ../mixins/common/card

append variables 
  - var footer = false;

prepend styles 
  link(rel="stylesheet", href=`${CWD}vendors/prism/prism.css`)

prepend scripts
  script(src=`${CWD}vendors/prism/prism.js`)

block navbarTop
  +MainNav({
    toggleID: 'navbarStandard',
    links: true,
    image: true,
    width: '70',
    logo: 'posh-logo.png'
  }).bg-white

block content 
  +Section(container).bg-200.py-6
    .row 
      .col-lg-8 
        h1.fs-6.fs-sm-5.fw-normal #{ pageTitle || 'Components' }
      .col-lg-6
        p.fs-8.fw-light.text-800.text-uppercase  #{pageDes || 'All modular elements can be readily used and customized in every layout across pages.'}
  +Section(container).pt-5
    .row.justify-content-center 
      .col-lg-8
        block docs 
      .col-lg-3.offset-1.d-none.d-lg-block 
        +DocsNav
  +Footer().footer